<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="siwek.krzysztof.dziennikszkolny.DetaleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNazwa"
        android:text="Nazwa: "
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textData"
        android:text="Data urodzenia: "
        android:textSize="20sp"
        android:layout_below="@id/textNazwa"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPesel"
        android:text="Pesel: "
        android:textSize="20sp"
        android:layout_below="@id/textData"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMiejsce"
        android:text="Miejsce urodzenia: "
        android:textSize="20sp"
        android:layout_below="@id/textPesel"/>

</RelativeLayout>
